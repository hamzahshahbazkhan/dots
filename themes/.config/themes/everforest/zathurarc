
# Everforest Zathura Theme - Complete

# Notifications
set notification-error-bg       "#e67e80"
set notification-error-fg       "#d3c6aa"
set notification-warning-bg     "#dbbc7f"
set notification-warning-fg     "#2d353b"
set notification-bg             "#2d353b"
set notification-fg             "#d3c6aa"

# Completion menu
set completion-bg               "#2d353b"
set completion-fg               "#d3c6aa"
set completion-group-bg         "#343f44"
set completion-group-fg         "#a7c080"
set completion-highlight-bg     "#a7c080"
set completion-highlight-fg     "#2d353b"

# Index mode (table of contents)
set index-bg                    "#2d353b"
set index-fg                    "#d3c6aa"
set index-active-bg             "#a7c080"
set index-active-fg             "#2d353b"

# Input bar
set inputbar-bg                 "#2d353b"
set inputbar-fg                 "#d3c6aa"

# Status bar
set statusbar-bg                "#343f44"
set statusbar-fg                "#d3c6aa"

# Highlighting
set highlight-color             "rgba(219,188,127,0.5)"
set highlight-active-color      "rgba(127,187,179,0.5)"

# Main colors
set default-bg                  "#2d353b"
set default-fg                  "#d3c6aa"

# Recolor mode (subtle filter for reading)
set recolor "false"                    # Off by default, press Ctrl+r to toggle
set recolor-lightcolor          "#343f44"     # Slightly lighter than bg for comfort
set recolor-darkcolor           "#d3c6aa"     # Soft white, not harsh
set recolor-keephue             "true"        # Preserves colors better
set recolor-reverse-video       "false"       # Normal contrast
