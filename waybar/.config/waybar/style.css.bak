@define-color foreground #ebdbb2;
@define-color background #1d2021;

* {
  background-color: @background;
  color: @foreground;

  border: rgba(ebdbb2ff);
  border-size: 2px;
  border-radius: 0;
  min-height: 0;
  /* font-family: CaskaydiaMono Nerd Font; */
  font-family: JetBrainsMono Nerd Font;
  font-size: 12px;
}

.modules-left {
  margin-left: 8px;
}

.modules-right {
  margin-right: 8px;
}

#workspaces button {
  all: initial;
  padding: 0 6px;
  margin: 0 1.5px;
  min-width: 9px;
}

#workspaces button.empty {
  opacity: 0.5;
}

#tray,
#cpu,
#battery,
#network,
#bluetooth,
#pulseaudio,
#clock,

#custom-expand-icon {
  margin-right: 7px;
}

tooltip {
  padding: 2px;
}
